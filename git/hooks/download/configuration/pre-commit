#!/bin/bash

BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)

if [[ "$BRANCH_NAME" == main || "$BRANCH_NAME" == fullcopy ]]; then
    echo "====================="
    echo "‚ùå Commit blocked: No changes should be made on main or fullcopy branches."
    echo "====================="
    exit 1
fi


# Check if branch starts with STRY and contains _MC
if [[ "$BRANCH_NAME" =~ ^STRY && "$BRANCH_NAME" == *_MC* ]]; then
    echo "====================="
    echo "‚ùå Commit blocked: Commits cannot be performed on Merge Conflict branches."
    echo "====================="
    echo "üí° If commits are to be made on Merge Conflict Branch. Make the commit on Parent Branch and then create a new Merge Conflict Branch."
    echo "====================="
    exit 1
fi

exit 0
